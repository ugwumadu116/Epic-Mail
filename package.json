{
  "name": "Epic-Mail",
  "version": "1.0.0",
  "description": "this is an app that helps people exchange messages/information over the internet",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && npm run duplicate-swagger-docs && node ./build/index.js",
    "dev": "nodemon --exec babel-node api/index.js",
    "test": "nyc mocha -r esm --exit",
    "build": "npm run clean && npm run build-babel",
    "clean": "rm -rf build && mkdir build",
    "build-babel": "babel -d ./build ./api -s",
    "duplicate-swagger-docs": "cat ./api/swagger.json >> ./build/swagger.json",
    "generate-lcov": "nyc report --reporter=text-lcov > lcov.info",
    "coveralls-coverage": "coveralls < lcov.info",
    "codeclimate-coverage": "codeclimate-test-reporter < lcov.info",
    "coverage": "nyc npm test && npm run generate-lcov && npm run coveralls-coverage && npm run codeclimate-coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ugwumadu116/Epic-Mail"
  },
  "keywords": [
    "Mail",
    "Instant messaging"
  ],
  "author": "joel ugwumadu",
  "license": "MIT",
  "engines": {
    "node": "10.13.0"
  },
  "dependencies": {
    "bcrypt": "^3.0.4",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "esm": "^3.2.4",
    "express": "^4.16.4",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.0",
    "swagger-ui-express": "^4.0.2",
    "trim-request": "^1.0.6",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.3",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "eslint": "^5.15.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "codeclimate-test-reporter": "^0.5.1",
    "coveralls": "^3.0.3",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.18.10",
    "nyc": "^13.2.0"
  }
}